<body>
  <%- include('partials/_nav') %>
  <div class="create-post"> Create a Post</div>

  <main >
      <form id="post-request" class="container" method="POST" action="/api/items/post">
      
        <input name="title" id="item-title" placeholder="Add title here" />
        <textarea name="description" id="item-description" placeholder="Add descrition here"></textarea>
        <input id="price1" name="price" type="text" placeholder="Add price here">
        <!-- <input class="choose-image" type="file" id="myFile" name="file"> -->
        <textarea class="choose-image" name="image" placeholder="Add image url here"></textarea>
        <div>
          <button class="actions" type="submit">Post Item</button>
        </div>
      </form>
  </main>


</body>
</html>
